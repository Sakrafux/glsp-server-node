{
  "private": true,
  "name": "parent",
  "version": "0.9.0",
  "engines": {
    "yarn": ">=1.7.0 <2.x.x"
  },
  "scripts": {
    "prepare": "yarn build",
    "all": "yarn install && yarn lint && yarn build",
    "build": "lerna run build",
    "watch": "lerna run --parallel watch",
    "lint": "lerna run lint --",
    "test": "lerna run test",
    "test:ci": "lerna run test:ci",
    "publish:prepare": "lerna version minor --exact --ignore-scripts --yes --no-push",
    "publish:latest": "lerna publish from-git --no-git-reset --no-verify-access --no-push",
    "publish:next": "SHA=$(git rev-parse --short HEAD) && lerna publish preminor --exact --canary --preid next.${SHA} --dist-tag next --no-git-reset --no-git-tag-version --no-push --ignore-scripts --yes --no-verify-access",
    "upgrade:next": "yarn upgrade -p \"@eclipse-glsp.*\" --next ",
    "start": "yarn --cwd examples/workflow-server start:server"
  },
  "resolutions": {
    "**/@eclipse-glsp/protocol": "0.9.0-next.e0116720"
  },
  "devDependencies": {
    "@eclipse-glsp/config": "next",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "lerna": "^4.0.0",
    "typescript": "^3.9.2",
    "mocha-jenkins-reporter": "^0.4.7",
    "mocha": "^9.1.3",
    "chai": "^4.3.4",
    "sinon": "^12.0.1",
    "ts-node": "^10.4.0",
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/sinon": "^10.0.6"
  },
  "workspaces": [
    "packages/*",
    "examples/workflow-server"
  ]
}
